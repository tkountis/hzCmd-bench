#!/usr/bin/env bash

set -e
cleanup() {
    exitCode=$?
    echo "exitCode=${exitCode}"
    if [[ ${exitCode} != 0 ]]; then
       slack-post simulator-fail FAIL $(pwd)
    fi

    hz wipe
    aws-terminate a.box

    hz-killSubJava

    exit $exitCode
}
trap "cleanup" INT TERM EXIT

testDir=${1}
boxCount=${2}

hz-bench-update

subDir=$(date '+%Y_%m_%d-%H_%M_%S')
mkdir -p ${subDir}

cp a.box ${subDir} 2>/dev/null || true
cd ${subDir}
cp -r ${HZ_CMD_BENCH_SRC}/lab/${testDir}/* .

hz-awsBox ${boxCount} a.box

./go


