#!/usr/bin/env bash

hzProps="-Dhazelcast.enterprise.license.key=${HAZELCAST_EE_KEY} -Dhazelcast.backpressure.enabled=true -Dhazelcast.connection.monitor.max.faults=1"
hz memberOps "-XX:+PrintFlagsFinal -XX:+UseLargePages -Xms5G -Xmx5G ${hzProps}"
hz clientOps "-XX:+PrintFlagsFinal -XX:+UseLargePages -Xms1G -Xmx1G ${hzProps}"

hz cluster -size M4C4 -id NEW -v 3.7-SNAPSHOT -type HZ -boxes a.box
hz cluster -size M4C4 -id OLD -v 3.6.2        -type HZ -boxes b.box

hz driver Member
hz type Metrics
hz threads 1
hz allowException false
nohup hz run -id NEW -warmup false loadData >> new.out &
nohup hz run -id OLD -warmup false loadData >> old.out &
wait

hz driver Client
hz threads 32
hz bench 300
hz allowException true
nohup hz run -id NEW -warmup false getBench >> new.out &
nohup hz run -id OLD -warmup false getBench >> old.out &

for i in {1..3}; do
 sleep 60
 hz driver Member${i}
 hz threads 1
 hz allowException false
 nohup hz run -id NEW -warmup false shutDown >> new.out &
 nohup hz run -id OLD -warmup false shutDown >> old.out &
done

wait
hz wipe
hz chart compare -dir output -red NEW -blue OLD

mv *.out output
