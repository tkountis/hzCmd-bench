#!/usr/bin/env bash

set -e
cleanup() {
    exitCode=$?
    echo "exitCode=${exitCode}"
    if [[ ${exitCode} != 0 ]]; then
       linkPath=$(pwd)
       linkPath=${linkPath#'/disk1/'}
       slack-post simulator-fail FAIL \<http://54.87.52.100/~${linkPath}\>
    fi
    hz wipe
    aws-terminate a.box
    hz-killSubJava

    exit $exitCode
}
trap "cleanup" INT TERM EXIT

testDir=${1}
boxCount=${2}
type=${3:-c4.xlarge}
ami=${4:-ami-08111162}

hz-bench-update

subDir="$(getHazelcastVersion)/$(date '+%Y_%m_%d-%H_%M_%S')"
mkdir -p ${subDir}
cp a.box ${subDir} 2>/dev/null || true
cd ${subDir}

echo -e "\033[32m${HZ_CMD_BENCH_SRC}/lab/${testDir}\033[0m"
echo -e "\033[32m${subDir}\033[0m"
pwd
cp -r ${HZ_CMD_BENCH_SRC}/lab/${testDir}/* .

aws-create --count ${boxCount} --instanceType ${type} --imageId ${ami}

./go


