#!/usr/bin/env bash

testDir=${1}
boxCount=${2}
compare=${3}
type=${4:-c4.xlarge}

set -e
cleanup() {
    exitCode=$?
    echo "exitCode=${exitCode}"
    if [[ ${exitCode} != 0 ]]; then
       slack-post simulator-fail FAIL $(pwd)
    fi

    hz wipe
    aws-terminate a.box
    if [ -n "${compare}" ] ; then
        aws-terminate b.box
    fi

    hz-killSubJava

    exit $exitCode
}
trap "cleanup" INT TERM EXIT



hz-bench-update

subDir=$(date '+%Y_%m_%d-%H_%M_%S')
mkdir -p ${subDir}

cp a.box ${subDir} 2>/dev/null || true
cp b.box ${subDir} 2>/dev/null || true
cd ${subDir}
cp -r ${HZ_CMD_BENCH_SRC}/lab/${testDir}/* .

hz-awsBox ${boxCount} ${type} a.box

if [ -n "${compare}" ] ; then
  hz-awsBox ${boxCount} ${type} b.box
fi

./go


